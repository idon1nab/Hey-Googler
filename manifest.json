{
        "version": "1.0",
        "manifest_version": 3,
        "name": "Side panel",
        "background": {
            "service_worker": "background.js"
        },
        "action": {
            "default_icon": "Temporary_icon.png"
        },
        "content_scripts": [
          {
            "matches": [
                "https://*/*",
                "https://*/*/*",
                "https://*/*/*/*",
                "https://*/*/*/*/*",
                "https://*/*/*/*/*/*/*",
                "http://*/*"
            ],
            "js": ["side-panel.js"]
          }
        ],
        "web_accessible_resources": [
          {
            "resources": ["popup.html"],
            "matches": ["https://*/*", "http://*/*"]
          }
        ]
      }